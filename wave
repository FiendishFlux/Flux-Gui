local player = game.Players.LocalPlayer
local armAngleChange = player.Character.ArmAngleChange
player.Character.ArmAngle.Disabled = true

local amplitude = 30
local frequency = 1 * math.pi / 5
local offset = 100

while true do
    local angle = CFrame.new(
        0,
        amplitude * math.cos(frequency * tick() + offset),
        0
    )
    armAngleChange:FireServer(angle)
    wait()
end
